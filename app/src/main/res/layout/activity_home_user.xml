<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/welcomeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Welcome, "
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/dark_orange"
            />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/welcomeTv"
            android:layout_marginStart="5dp"
            android:text="Name"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/dark_orange"
            />
        
        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_white"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle"
            android:layout_alignParentEnd="true"
            android:padding="10dp"/>

    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChineseMobile"
            android:textSize="30sp"
            android:fontFamily="@font/roboto_medium"
            android:padding="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/dark_orange"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn the basics of Mandarin Chinese"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="20dp"
            android:textColor="@color/gray02"/>

    <RelativeLayout
        android:id="@+id/introCharPinyin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageButton
            android:id="@+id/introHomeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_intro_button_big"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            />

        <ImageButton
            android:id="@+id/charHomeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_char_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="30dp"
            />

        <ImageButton
            android:id="@+id/pinyinHomeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_pinyin_button"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="30dp"
            android:layout_below="@id/charHomeBtn"
            />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vocabulary"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textSize="22dp"
                android:fontFamily="@font/roboto_bold"/>

            <ImageButton
                android:id="@+id/lvl1VocabHomeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_vocab_lvl1_button"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                />


    </LinearLayout>


</ScrollView>